<!DOCTYPE html>
<html>
<head>
  <title>Floors</title>
</head>
<body>
  <h2>Floors</h2>
  <form method="POST" action="/floors/add">
    <label>Level: <input name="level" placeholder="Level" required /></label>
    <label>Name: <input name="name" placeholder="Name" required /></label>
    <button type="submit">Add Floor</button>
  </form>

  <table border="1">
    <tr><th>Level</th><th>Name</th><th>Actions</th></tr>
    <% floors.forEach(floor => { %>
      <tr>
        <td><%= floor.level %></td>
        <td><%= floor.name %></td>
        <td>
          <form method="POST" action="/floors/delete/<%= floor.id %>" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this floor?')">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <a href="/rooms">Manage Rooms</a> | <a href="/residents">Manage Residents</a>
</body>
</html>
