<html>
<head>
  <title>Rooms</title>
</head>
<body>
  <h2>Rooms</h2>
  <form method="POST" action="/rooms/add">
    <input name="capacity" placeholder="Capacity" required />
    <input name="number" placeholder="Room Number" required />
    <select name="floor" required>
      <% floors.forEach(f => { %>
        <option value="<%= f.id %>"><%= f.name %> (Level <%= f.level %>)</option>
      <% }) %>
    </select>
    <button type="submit">Add Room</button>
  </form>

  <table border="1">
    <tr><th>Number</th><th>Capacity</th><th>Floor</th><th>Actions</th></tr>
    <% rooms.forEach(room => { %>
      <tr>
        <td><%= room.number %></td>
        <td><%= room.capacity %></td>
        <td><%= room.floor %></td>
        <td>
          <form method="POST" action="/rooms/delete/<%= room.id %>">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>

  <a href="/floors">Manage Floors</a> | <a href="/residents">Manage Residents</a>
</body>
</html>